@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarBooking</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarBooking.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;800&display=swap" rel="stylesheet">

    <style>
        body {
        font-family: 'Montserrat', sans-serif;
        background: #F7FAFF;
        margin: 0;
        padding: 0;
        display: flex;
        width: 100%;
        }

        .sidebar {
        width: 260px;
        background: #D34E4E;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        padding-top: 20px;
        transition: 0.3s ease-in-out;
        overflow: hidden;
        }

        .sidebar.collapsed {
        width: 70px;
        }

        .brand {
        color: white;
        font-weight: 800;
        font-size: 22px;
        text-align: center;
        margin-bottom: 25px;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        }

        .brand-icon {
        font-size: 26px;
        }

        .sidebar.collapsed .brand-text {
        display: none;
        }

        .sidebar.collapsed .brand-icon {
        margin-right: 0;
        }

        .sidebar ul {
        list-style: none;
        padding-left: 0;
        }

        .sidebar ul li {
        padding: 12px 20px;
        position: relative;
        }

        .sidebar ul li a {
        color: white;
        font-weight: 500;
        font-size: 15px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: 0.3s;
        }

        .sidebar ul li a:hover {
        color: #FFD700;
        transform: translateX(5px);
        }

        .sidebar.collapsed .menu-text {
        display: none;
        }

        .tooltip {
        position: absolute;
        left: 70px;
        top: 50%;
        transform: translateY(-50%);
        background: #222;
        color: #fff;
        padding: 6px 12px;
        border-radius: 6px;
        white-space: nowrap;
        font-size: 14px;
        opacity: 0;
        pointer-events: none;
        transition: 0.2s ease-in-out;
        z-index: 9999;
        }

        .sidebar.collapsed ul li:hover .tooltip {
        opacity: 1;
        left: 80px;
        }

        .toggle-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #D34E4E;
        width: 5px; 
        height: 5px;
        border: none;
        color: white;
        cursor: pointer;
        font-size: 20px;
        transition: 0.3s;
        z-index: 1000;
        }

        .sidebar.collapsed .toggle-btn {
        right: -10px !important;
        }

        .main-content {
        margin-left: 260px;
        padding: 35px;
        padding-left: 40px !important;
        padding-top: 35px !important;
        width: calc(100% - 260px);
        transition: 0.3s ease-in-out;
        }

        .main-content.expanded {
        margin-left: 70px;
        width: calc(100% - 70px);
        padding-left: 40px !important;
        }

        footer {
        background: #D34E4E;
        color: white;
        text-align: center;
        padding: 12px 0;
        margin-top: 40px;
        border-radius: 10px;
        }
    </style>

</head>

<body>

    <div class="sidebar" id="sidebar">

        <button class="toggle-btn" id="toggleSidebar"> <i class="fa-solid fa-car-side brand-icon"></i></button>

        <div class="brand">
            <span class="brand-text">Car Booking</span>
        </div>

        <ul>

            @if (!User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="User" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> <span class="menu-text">Login</span></a></li>
                <li><a asp-controller="User" asp-action="Register"><i class="fa-solid fa-user-plus"></i> <span class="menu-text">Register</span></a></li>
            }
            else @* if (User.HasClaim("2FA_VERIFIED", "true")) *@
            {
                var userRole = User.FindFirst(ClaimTypes.Role)?.Value;

                if (userRole == "Admin")
                {
                    <li>
                        <a asp-controller="AdminCar" asp-action="AddEditCar">
                            <i class="fa-solid fa-plus"></i>
                            <span class="menu-text">Add Car</span>
                        </a>
                        <span class="tooltip">Add Car</span>
                    </li> 
                    
                    <li>
                        <a asp-controller="User" asp-action="GetAllUserList">
                            <i class="fa-solid fa-users"></i>
                            <span class="menu-text">User List</span>
                        </a>
                        <span class="tooltip">User List</span>
                    </li>
                }
               
                if (userRole == "Admin" || userRole == "User")
                {
                <li>
                    <a asp-controller="CarBooking" asp-action="Dashboard">
                        <i class="fa-solid fa-gauge"></i>
                        <span class="menu-text">Dashboard</span>
                    </a>
                    <span class="tooltip">Dashboard</span>  
                </li>
                    
               
                <li>
                    <a asp-controller="CarBooking" asp-action="CarBooking">
                        <i class="fa-solid fa-car"></i>
                        <span class="menu-text">Book a Car</span>
                    </a>
                    <span class="tooltip">Book a Car</span>
                </li>
                <li>
                    <a asp-controller="CarBooking" asp-action="GetAllCarBookingList">
                        <i class="fa-solid fa-list"></i>
                        <span class="menu-text">All Bookings</span>
                    </a>
                    <span class="tooltip">All Bookings</span>
                </li>
                <li>
                    <a asp-controller="AdminCar" asp-action="GetAllCarList">
                        <i class="fa-solid fa-car-side"></i>
                        <span class="menu-text">Car List</span>
                    </a>
                    <span class="tooltip">Car List</span>
                </li>
                <li>
                    <a asp-controller="User" asp-action="Profile">
                        <i class="fa-solid fa-user"></i>
                        <span class="menu-text">Profile</span>
                    </a>
                    <span class="tooltip">Profile</span>
                </li>

                <li>
                    <a asp-controller="User" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span class="menu-text">Logout</span>
                    </a>
                    <span class="tooltip">Logout</span>
                </li>
                }
            }
        </ul>

    </div>

    <div class="main-content" id="mainContent">
        @RenderBody()

        <footer>
            © 2026 CarBooking • Your Travel Partner
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        if ('@User.Identity.IsAuthenticated' === 'False') {
            window.history.forward();
        }
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");
        const toggleBtn = document.getElementById("toggleSidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            mainContent.classList.toggle("expanded");
        });
    </script>

</body>
</html>
