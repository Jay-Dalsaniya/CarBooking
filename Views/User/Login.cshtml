@model CarBooking.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .page-wrapper {
        padding: 40px 20px;
        background: #F4F6FA;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        width: 100%;
        max-width: 520px;
        background: #ffffff;
        padding: 40px 45px;
        border-radius: 18px;
        box-shadow: 0px 6px 25px rgba(0,0,0,0.08);
        animation: fadeIn .4s ease;
    }

    .login-title {
        font-weight: 800;
        font-size: 30px;
        color: #D34E4E;
        text-align: center;
        margin-bottom: 5px;
    }

    .login-subtitle {
        text-align: center;
        color: #6c757d;
        margin-bottom: 25px;
        font-size: 14px;
    }

    .form-control {
        background: #F1F3F7;
        border: 1px solid #D6D6D6;
        padding: 14px;
        border-radius: 10px;
        font-size: 15px;
        margin-bottom: 10px;
        transition: .25s ease;
    }

        .form-control:focus {
            border-color: #D34E4E;
            background: #fff;
            box-shadow: 0px 0px 8px rgba(255,75,43,0.25);
        }

    .btn-login {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        background-color: #D34E4E;
        border: none;
        color: white;
        font-size: 15px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: .5px;
        transition: 0.3s ease;
        margin-top: 10px;
    }

        .btn-login:hover {
            background-color: #D93A1D;
            transform: scale(1.03);
        }

    .text-danger {
        font-size: 12px;
        margin-top: -5px;
        margin-bottom: 8px;
        display: block;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>


<div class="page-wrapper">
    <div class="login-card">

        <h2 class="login-title">Login to Your Account</h2>
        <p class="login-subtitle">Use your registered email & password</p>

        <form asp-action="Login" method="post">

            <input asp-for="Email"
                   class="form-control"
                   placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <input asp-for="Password"
                   type="password"
                   class="form-control"
                   placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" class="btn-login">Sign In</button>
        </form>

        <p class="mt-3 text-center" style="font-size:14px; color:#555;">
            Don't have an account?
            <a href="/User/Register" style="color:#D34E4E; font-weight:bold;">
                Register here
            </a>
        </p>

    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["PasswordResetSuccess"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Password Updated!',
                        text: '@TempData["PasswordResetSuccess"]',
                        confirmButtonColor: '#28a745'
                    });
            </text>
        }
        @if (TempData["ProfileSuccess"] != null)
        {
            <text>
                         Swal.fire({
                             icon: 'success',
                             title: 'Profile Updated!',
                             text: '@TempData["ProfileSuccess"]',
                             confirmButtonColor: '#D34E4E'
                         });
            </text>
        }

    </script>

}
