@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Sent</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;800&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />


    <style>
        body {
            background: linear-gradient(135deg, #d34e4e, #a73434);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Montserrat', sans-serif;
            color: white;
            overflow: hidden;
        }

        .confirm-box {
            width: 500px;
            padding: 40px;
            background: rgba(255,255,255,0.12);
            border-radius: 18px;
            text-align: center;
            backdrop-filter: blur(10px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.25);
            animation: fadeUp 0.6s ease-out;
        }

            .confirm-box i {
                font-size: 65px;
                color: #FFD700;
                margin-bottom: 15px;
                animation: pulseIcon 1.4s infinite ease-in-out;
            }

            .confirm-box h1 {
                font-weight: 700;
                margin-bottom: 15px;
            }

            .confirm-box p {
                font-size: 17px;
                opacity: 0.95;
            }

        .btn-gmail {
            margin-top: 20px;
            background: #fff;
            color: #d34e4e;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 700;
            border: none;
            transition: 0.3s ease;
        }

            .btn-gmail:hover {
                transform: scale(1.07);
                background: #f8f8f8;
            }

        @@keyframes fadeUp {
            from

        {
            transform: translateY(40px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        @@keyframes pulseIcon {
            0%

        {
            transform: scale(1);
            opacity: 0.9;
        }

        100% {
            transform: scale(1.15);
            opacity: 1;
        }

        }
    </style>
</head>

<body>

    <input type="hidden" id="RegisterSuccessfull" value="@TempData["RegisterSuccessfull"]" />

    <div class="confirm-box">
        <i class="fa-solid fa-envelope-circle-check"></i>

        <h1>Email Sent!</h1>
        <p>A login link has been sent to your email address.</p>
        <p>Please check your inbox (and spam folder) to continue.</p>

        <form action="https://mail.google.com/mail/" method="get" target="_blank">
            <button type="submit" class="btn-gmail">
                <i class="fa-solid fa-paper-plane"></i> Open Gmail
            </button>
        </form>
    </div>

</body>

</html>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>
}
