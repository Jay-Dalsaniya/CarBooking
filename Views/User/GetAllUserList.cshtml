@model IEnumerable<CarBooking.Models.User>

@{
    ViewData["Title"] = "User List";
    var userIsAdmin = User.IsInRole("Admin");
}

<style>
    .page-wrapper {
        padding: 20px 30px;
        background: #F4F6FA;
        animation: fadeIn .4s ease;
    }

    .page-title {
        font-weight: 800;
        font-size: 28px;
        color: #D34E4E;
        border-left: 6px solid #D34E4E;
        padding-left: 12px;
        margin-bottom: 20px;
    }

    .user-card {
        background: white;
        border-radius: 18px;
        padding: 20px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.08);
    }

    table.dataTable {
        border-collapse: separate !important;
        border-spacing: 0 12px !important;
    }

        table.dataTable thead {
            background: #D34E4E;
            color: white;
            font-weight: 600;
        }

        table.dataTable tbody tr {
            background: #ffffff !important;
            border-radius: 12px;
            box-shadow: 0px 3px 10px rgba(0,0,0,0.05);
            transition: .2s;
        }

            table.dataTable tbody tr:hover {
                background: #fff5f5 !important;
                transform: scale(1.01);
            }

        table.dataTable tbody td {
            padding: 15px !important;
            vertical-align: middle;
        }

    .badge-active {
        background-color: #28a745;
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    .badge-inactive {
        background-color: #dc3545;
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="page-wrapper">

    <h2 class="page-title">User List</h2>

    <div class="user-card mt-3">
        <table id="userTable" class="table nowrap w-100"></table>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {

            $('#userTable').DataTable({
                processing: true,
                serverSide: true,
                autoWidth: true,
                scrollX: true,
                searching: true,
                lengthMenu: [10, 25, 50, 100],

                ajax: {
                    url: "/User/GetAllUserList",
                    type: "POST",
                    contentType: "application/json",
                    data: function (d) {
                        return JSON.stringify({
                            Draw: d.draw,
                            Start: d.start,
                            Length: d.length,
                            Search: { Value: d.search.value },

                            Columns: d.columns.map(function (col, index) {
                                var orderInfo = d.order.find(o => o.column === index);

                                return {
                                    Field: col.data,
                                    IsSearchable: col.searchable,
                                    IsSortable: col.orderable,
                                    Search: { Value: col.search.value },
                                    Sort: orderInfo
                                        ? {
                                            Direction: orderInfo.dir === "asc" ? 0 : 1
                                        }
                                        : null
                                };
                            })
                        });
                    },
                    dataSrc: function (json) {
                        return json.data;
                    }
                },

                columns: [
                    { data: "userName", title: "User Name", searchable: true, orderable: true },
                    { data: "email", title: "Email", searchable: true, orderable: true },
                    { data: "phoneNo", title: "Phone No", searchable: true, orderable: true },
                    { data: "role", title: "Role", searchable: true, orderable: true , visible: false  },
                    {
                        data: "isDelete",
                        title: "Status",
                        searchable: true,
                        orderable: true,
                        render: function (data) {
                            return data === false
                                ? `<span class='badge-active'>Active</span>`
                                : `<span class='badge-inactive'>Inactive</span>`;
                         }
                    },
                    {
                        data: "createdDate",
                        title: "Created Date",
                        searchable: true,
                        orderable: true,
                        render: function (data) {
                            return data ? data.split("T")[0] : "";
                        }
                    }
                ]
            });

        });
    </script>
}
