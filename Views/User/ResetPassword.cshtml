@model CarBooking.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .page-wrapper {
        padding: 40px 20px;
        background: linear-gradient(135deg, #F4F6FA, #EEF1F7);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .reset-card {
        width: 100%;
        max-width: 520px;
        background: #ffffff;
        padding: 45px;
        border-radius: 20px;
        box-shadow: 0px 10px 35px rgba(0,0,0,0.1);
        position: relative;
        animation: fadeIn .4s ease;
        text-align: center;
    }

        .reset-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #D34E4E, #ff7a7a);
            border-radius: 20px 20px 0 0;
        }

    .reset-title {
        font-weight: 800;
        font-size: 28px;
        color: #D34E4E;
        margin-bottom: 8px;
    }

    .reset-subtitle {
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    .form-label {
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 6px;
        display: block;
        text-align: left;
    }

    .form-control {
        background: #F1F3F7;
        border: 1px solid #D6D6D6;
        padding: 14px;
        border-radius: 12px;
        font-size: 15px;
        transition: .25s ease;
    }

        .form-control:focus {
            border-color: #D34E4E;
            background: #fff;
            box-shadow: 0 0 8px rgba(211,78,78,.25);
        }

    .btn-primary-theme {
        width: 100%;
        padding: 14px;
        border-radius: 14px;
        background-color: #D34E4E;
        border: none;
        color: white;
        font-size: 15px;
        font-weight: 700;
        letter-spacing: 1px;
        transition: .3s ease;
        margin-top: 10px;
    }

        .btn-primary-theme:hover {
            background-color: #D93A1D;
            transform: translateY(-2px);
            box-shadow: 0px 8px 20px rgba(211,78,78,0.35);
        }

    .text-danger {
        font-size: 13px;
        margin-top: 6px;
        display: block;
        text-align: left;
    }

    .helper-text {
        font-size: 12px;
        color: #888;
        margin-top: 18px;
        line-height: 1.5;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="page-wrapper">
    <div class="reset-card">

        <h2 class="reset-title">
            <i class="fa-solid fa-key"></i> Reset Password
        </h2>

        <p class="reset-subtitle">
            Create a strong new password for your account
        </p>

        <form asp-action="ResetPassword" method="post">

            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input asp-for="NewPassword"
                       type="password"
                       class="form-control"
                       placeholder="Enter new password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="form-control"
                       placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary-theme">
                <i class="fa-solid fa-save"></i> Update Password
            </button>

        </form>

        <div class="helper-text">
            Make sure your password is strong and unique.<br />
            Do not reuse old passwords.
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["OtpSuccess"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Verified',
                        text: '@TempData["OtpSuccess"]',
                        confirmButtonColor: '#D34E4E'
                    });
            </text>
        }

        @if (TempData["PasswordResetError"] != null)
        {
            <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Reset Failed',
                        text: '@TempData["PasswordResetError"]',
                        confirmButtonColor: '#D34E4E'
                    });
            </text>
        }
    </script>
}
